<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtA"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtB"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/txtA"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="41dp"
        android:layout_height="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="168dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRestar"
        android:layout_width="41dp"
        android:layout_height="52dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="168dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnSumar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="41dp"
        android:layout_height="52dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="168dp"
        android:text="*"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnRestar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="41dp"
        android:layout_height="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="256dp"
        android:text="/"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPorcentaje"
        android:layout_width="41dp"
        android:layout_height="52dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="256dp"
        android:text="%"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnDividir"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPotencia"
        android:layout_width="41dp"
        android:layout_height="52dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="256dp"
        android:text="^"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnPorcentaje"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/txtResult"
        android:layout_width="54dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="110dp"
        android:lineSpacingExtra="8sp"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/txtB"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>